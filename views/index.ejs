

<!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="clearfix">
      <a class="btn btn-primary float-right" href="/post">Post Something New </a>
    </div>
    <br>
    <div class="clearfix">
      <a class="btn btn-primary float-right" href="/posts/show">Show Post </a>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
          <% items.forEach(function(item, i){ %>
        <h2 class="post-title">            
          <a href="/post/<%-item.id%>">
          <%-item.title %>
        </h2>
    <% }) %>
        </div>
        </div>
    </div>

    
  <hr>
